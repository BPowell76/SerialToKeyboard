<Window x:Class="SerialToKeyboard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SerialToKeyboard"
        mc:Ignorable="d"
        Title="Serial to Keyboard"
        Height="200"
        Width="500">
    <Grid>
        <Label Margin="20,5,0,0"
                       Width="150"
                       Height="30"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       HorizontalContentAlignment="Center"
                       VerticalContentAlignment="Center"
                       FontWeight="Bold"
                       FontSize="11pt"
                       Content="COM Port"/>
        <ComboBox x:Name="cmbCOMPorts"
                  Margin="20,40,0,0"
                  Width="150"
                  Height="25"
                  HorizontalAlignment="Left"
                  VerticalAlignment="Top"
                  FontSize="11pt"
                  SelectionChanged="CmbCOMPorts_OnSelectionChanged"/>
        <Label Margin="200,5,0,0"
               Width="150"
               Height="30"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               HorizontalContentAlignment="Center"
               VerticalContentAlignment="Center"
               FontWeight="Bold"
               FontSize="11pt"
               Content="Baud Rate"/>
        <StackPanel x:Name="baudRadioStack"
                    Width="150"
                    Height="125"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Margin="200,40,0,0">
            <RadioButton x:Name="radBtn4800"
                         FontSize="11pt"
                         Checked="RadBtn_OnChecked">
                4800
            </RadioButton>
            <RadioButton x:Name="radBtn9600"
                         FontSize="11pt"
                         Checked="RadBtn_OnChecked">
                9600
            </RadioButton>
            <RadioButton x:Name="radBtn19200"
                         FontSize="11pt"
                         Checked="RadBtn_OnChecked">
                19200
            </RadioButton>
            <RadioButton x:Name="radBtn38400"
                         FontSize="11pt"
                         Checked="RadBtn_OnChecked">
                38400
            </RadioButton>
            <RadioButton x:Name="radBtn57600"
                         FontSize="11pt"
                         Checked="RadBtn_OnChecked">
                57600
            </RadioButton>
            <RadioButton x:Name="radBtn115200"
                         FontSize="11pt"
                         Checked="RadBtn_OnChecked">
                115200
            </RadioButton>
        </StackPanel>
        <Label x:Name="lblStatus"
                       FontStyle="Italic"
                       FontSize="12pt"
                       Content="Deactivated"
                       Foreground="Red"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Right"
                       Margin="0,40,20,0"
                       HorizontalContentAlignment="Center"
                       Width="100"/>
        <Button x:Name="btnEnable"
                Width="100"
                Height="40"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,80,20,0"
                Content="Enable"
                Click="BtnEnable_OnClick"/>
    </Grid>
</Window>
